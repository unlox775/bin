#!/usr/bin/perl 

###############################################
###################  Main  ####################
###############################################

my @picts = </shared/home/david/.bg/*>;

my $pict = $picts[( int( rand($#picts+100) ) % ($#picts+1) )];

system("/usr/X11R6/bin/xv -quit -geometry 1024x768 -root $pict &");



exit 0;


###############################################
#################  End Main  ##################
###############################################


